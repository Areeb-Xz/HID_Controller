<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Solid background color (optional, use transparent if only border needed) -->
    <solid android:color="@android:color/transparent" />
    <!-- The border definition -->
    <stroke
        android:width="3dp"
        android:color="#b0b0b0" />
    <!-- Optional: for rounded corners -->
    <corners android:radius="10dp" />
    <!-- Optional: padding between border and content -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>